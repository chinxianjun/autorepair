<%= content_for :head do %>
<meta http-equiv="refresh" content="60" />
<% end %>

<div class="main-content">
    <div class="admin-content">
        <h2><%= link_to "客户问题", questions_path %>&gt;&gt;咨询列表<span class="info"></span></h2>
      <!--table样式{-->
      <table class="admin-table table-style1">
          <thead>
              <tr>
                  <td>ID</td>
                  <td>客户姓名</td>
                  <td>联系电话</td>
                  <td>咨询问题</td>
                  <td>处理人</td>
                  <td>状态</td>
                  <td>创建时间</td>
                  <td colspan="2">操作</td>
              </tr>
          </thead>
          <tbody>
            <% if @consultings.size > 0 %>
              <% @consultings.each do |consulting| %>
                  <tr>
                      <td><%= consulting.id %></td>
                      <td><%= @customer.fullname unless @customer.nil? %></td>
                      <td><%= @customer.phone unless @customer.nil?  %></td>
                      <td><%= consulting.question %></td>
                      <td><%= consulting.answerer %></td>
                      <td><%= consulting.status %></td>
                      <td><%= consulting.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
                      <td>
                      <% if consulting === Consulting.last %>
                         <a href="/questions/<%= @question.id %>/consultings/<%= consulting.id %>/edit" class="fun-link text2 product-name">编辑</a>
                      <% end %>
                      </td>
                      <td>
                         <a href="/questions/<%= @question.id %>/consultings/<%= consulting.id %>" class="fun-link text2 product-name">查看</a>
                      </td>
                  </tr>
              <% end %>
            <% else %>
              <tr></tr>
            <% end %>
          </tbody>
      </table>
      <!--}table样式-->
    </div>
</div>