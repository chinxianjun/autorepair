<%= content_for :head do %>
<meta http-equiv="refresh" content="60" />
<% end %>

<div class="main-content">
    <div class="admin-content">
        <h2><%= link_to "客户问题", questions_path %>&gt;&gt;投诉列表<span class="info"></span></h2>
      <!--table样式{-->
      <table class="admin-table table-style1">
          <thead>
              <tr>
                  <td>ID</td>
                  <td>客户姓名</td>
                  <td>联系电话</td>
                  <td>投诉问题</td>
                  <td>处理人</td>
                  <td>类别</td>
                  <td>状态</td>
                  <td>创建时间</td>
                  <td colspan="2">操作</td>
              </tr>
          </thead>
          <tbody>
            <% if @complaints.size > 0 %>
              <% @complaints.each do |complaint| %>
                  <tr>
                      <td><%= complaint.id %></td>
                      <td><%= @customer.fullname %></td>
                      <td><%= @customer.phone %></td>
                      <td><%= complaint.description %></td>
                      <td><%= complaint.manager %></td>
                      <td><%= complaint.category %></td>
                      <td><%= complaint.status %></td>
                      <td><%= complaint.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
                      <td>
                      <% if complaint == @complaints.first %>
                         <a href="/questions/<%= @question.id %>/complaints/<%= complaint.id %>/edit" class="fun-link text1 product-name">编辑</a>
                      <% end %>
                      </td>
                      <td>
                         <a href="/questions/<%= @question.id %>/complaints/<%= complaint.id %>" class="fun-link text1 product-name">查看</a>
                      </td>
                  </tr>
              <% end %>
            <% else %>
              <tr></tr>
            <% end %>
          </tbody>
      </table>
      <!--}table样式-->
    </div>
</div>