<%= content_for :head do %>
    <%= javascript_include_tag "jquery.md5" %>
    <%= javascript_include_tag "message" %>
<% end %>
<!----main-content{{{{---->
<div class="main-content">
    <!----admin-content{{{{{---->
    <div class="admin-content">
        <h2>短信详情<span class="info"></span></h2>
        <!--信息{-->
        <div class="content-set">
            <div class="hd">
                <h2>短信息</h2>
            </div>
            <div class="bd">
                <dl class="details-info">
                    <dd>
                        <table>
                            <tbody>
                                <tr>
                                    <th>标题</th>
                                    <td><%= @message.category %></td>
                                </tr>
                                <tr>
                                    <th>内容</th>
                                    <td><%= @message.content %></td>
                                </tr>
                                <tr>
                                    <th>创建人</th>
                                    <td><%= @message.creator %></td>
                                </tr>
                            </tbody>
                        </table>
                    </dd>
                </dl>
            </div>
        </div>
        <div class="tool-bar tr clrfix">
            <button class="edit-btn editMessage">编辑</button>
            <button class="cancel-btn">返回</button>
        </div>
        <!----}}}}}}content-set---->
    </div>
    <!----}}}}}admin-content---->
</div>
<!----}}}}main-content---->
<!--编辑短信弹框{-->
<div id="J-message_update">
    <div class="form-set">
        <form method="post" action="">
            <dl>
              <dt>标题</dt>
              <dd><input type="text" name="" value=""
                         class="inp inp2" id="U-category"/></dd>
              <dt>内容</dt>
              <dd><textarea class="textarea textarea2" id="U-content"></textarea></dd>
              <dt>创建人</dt>
              <dd><input type="text" name="" value="<%= current_user.fullname %>"
                         class="inp inp2" id="U-creator" readonly="readonly"/></dd>
              <input type="hidden" value="" id="U-message_id"/>
            </dl>
        </form>
    </div>
</div>
<!--}编辑短信弹框-->