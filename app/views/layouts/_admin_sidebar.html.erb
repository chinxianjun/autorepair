<div class="side-bar">
  <% if current_user.admin? %>
    <div class="menu-box">
        <h3><a href="javascript:void(0)">公司管理</a></h3>
        <div>
            <ul class="sub-menu">
                <li><span class="ui-icon ui-icon-suitcase"></span>
                  <a href="/admin/companies/" class="product-name" >公司列表</a>
                </li>
            </ul>
            <ul class="sub-menu">
                <li><span class="ui-icon ui-icon-document"></span>
                  <a href="javascript:void(0)" class="product-name" id="newCompany">新建公司</a>
                </li>
            </ul>
            <% if current_user.companies.any? %>
              <% current_user.companies.each do |company| %>
                <ul class="sub-menu">
                    <li>
                      <span class="ui-icon ui-icon-home"></span>
                      <%= link_to "#{company.simply}", setting_admin_company_path(company) %>
                    </li>
                </ul>
              <% end %>
            <% end %>
        </div>
    </div>
    <% if current_user.companies.any? %>
        <div class="menu-box">
          <h3><a href="javascript:void(0)">员工管理</a></h3>
          <div>
              <ul class="sub-menu">
                  <li>
                    <a href="/admin/users/">
                      <span class="ui-icon ui-icon-person"></span>员工管理</a>
                  </li>
              </ul>
          </div>
        </div>
        <div class="menu-box">
          <h3><a href="javascript:void(0)">权限设置</a></h3>
          <div>
              <ul class="sub-menu">
                  <li>
                    <a href="/admin/roles/">
                      <span class="ui-icon ui-icon-locked"></span>角色管理</a>
                  </li>
              </ul>
          </div>
        </div>
    <% end %>
    <div class="menu-box">
        <h3><a href="javascript:void(0)">帐号设置</a></h3>
        <div>
            <ul class="sub-menu">
                <li><span class="ui-icon ui-icon-key"></span>
                  <a href="/admin/users/<%= current_user.id %>/password_edit">
                    修改密码
                  </a>
                </li>
                <li><span class="ui-icon ui-icon-info"></span>
                  <a href="/admin/users/<%= current_user.id %>">帐号信息</a>
                </li>
            </ul>
        </div>
    </div>
  <% end %>
</div>