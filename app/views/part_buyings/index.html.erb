<%= content_for :head do %>
<meta http-equiv="refresh" content="60" />
<% end %>

<div class="main-content">
    <div class="admin-content">
        <h2><%= link_to "客户问题", questions_path %>&gt;&gt;购件列表<span class="info"></span></h2>
        <p><%#= @current_company.simply %></p>
      <!--table样式{-->
      <table class="admin-table table-style1">
          <thead>
              <tr>
                  <td>ID</td>
                  <td>客户姓名</td>
                  <td>联系电话</td>
                  <!--<td>推荐人</td>-->
                  <td>创建人</td>
                  <!--<td>业务员</td>-->
                  <td>购件经理</td>
                  <td>状态</td>
                  <td>创建时间</td>
                  <td colspan="2">操作</td>
              </tr>
          </thead>
          <tbody>
            <% if @part_buyings.size > 0 %>
              <% @part_buyings.each do |part_buying| %>
                  <tr>
                      <td><%= part_buying.id %></td>
                      <td><%= @customer.fullname %></td>
                      <td><%= @customer.phone %></td>
                      <!--<td><%#= part_buying.referral %></td>-->
                      <td><%= part_buying.creator %></td>
                      <!--<td><%#= part_buying.salesman %></td>-->
                      <td><%= part_buying.manager %></td>
                      <td><%= part_buying.status %></td>
                      <td><%= part_buying.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
                      <td>
                        <%# if part_buying == @part_buyings.first %>
                          <%# if part_buying.status == "指派业务员" %>
                            <!--<a href="/questions/<%#= @question.id %>/part_buyings/<%#= part_buying.id %>/add_salesman" class="fun-link text2 product-name">编辑</a>-->
                          <%# else %>
                            <a href="/questions/<%= @question.id %>/part_buyings/<%= part_buying.id %>/edit"
                               class="fun-link text3 product-name">
                              <span class="ui-icon ui-icon-pencil"></span>编辑</a>
                          <%# end %>
                        <%# end %>
                      </td>
                      <td>
                        <a href="/questions/<%= @question.id %>/part_buyings/<%= part_buying.id %>"
                           class="fun-link text3" >
                          <span class="ui-icon ui-icon-document"></span>查看</a>
                      </td>
                  </tr>
              <% end %>
            <% else %>
              <tr></tr>
            <% end %>
          </tbody>
      </table>
      <!--}table样式-->
    </div>
</div>